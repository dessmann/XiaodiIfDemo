<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/accountEditText"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:hint="请输入用户账号" />

        <EditText
            android:id="@+id/nickEditText"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:hint="请输入用户昵称" />
        <EditText
            android:id="@+id/locknameEditText"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:hint="请输入锁具名称" />

        <EditText
            android:id="@+id/lockmacEditText"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:hint="请输入锁具mac地址" />
        <EditText
            android:id="@+id/managepwdEditText"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:hint="请输入管理密码" />

        <EditText
            android:id="@+id/metertypeEditText"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:hint="请输入设备类型" />
    </LinearLayout>

</LinearLayout>
